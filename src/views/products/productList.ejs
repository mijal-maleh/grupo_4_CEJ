<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/head.ejs')%>

        <link rel="stylesheet" href="../css/estilos-productList.css">

        <title>Pagina principal de Actividades</title>

</head>

<%- include ('../partials/header.ejs')%>
    <%- include ('../partials/main-header.ejs')%>

        <body>

            <div class="title">
                <h1>Pagina principal de Actividades</h1>
            </div>
            <section class="prodListMain">
                <div class="sectionTitlePL">
                    <h2>Cursos</h2>
                </div>
                <div class="prodSection">
                    <%products.forEach (product=> {
                        if(product.tipoActividad == "Curso") { %>
                        <article class="article">
                            <% let rutaProd="productDetail" + "/:" + product.id%>
                                <a href=<%=rutaProd %>>
                                    <img class="imgProdList" width="150" height="150" src=<%=product.imagenActividad %>
                                    alt=<%= product.photo_name %> >
                                </a>
                                <div class="detProdList">
                                    <i class=" <%= product.iconoTipoAct %>"></i>
                                    <%= product.tipoActividad %> <br>
                                       <div class="nameProdList"><%= product.nombreActividad %></div>  <br>
                                            <%= product.fechaActividad %> <br>
                                                <%= product.horaActividad %> <br>
                                                    $<%= product.costoActividad %>
                                </div>
                        </article>
                        <%} }) %>
                </div>
                <div class="sectionTitlePL">
                    <h2>Actividades y Eventos</h2>
                </div>
                <div class="prodSection">
                    <%products.forEach (product=> {
                        if(product.tipoActividad !== "Curso") { %>
                        <article class="article">
                            <% let rutaProd="/productDetail/:" + product.id%>
                                <a href=<%=rutaProd %>>
                                    <img class="imgProdList" width="150" height="150" src=<%=product.imagenActividad %>
                                    alt=<%= product.photo_name %> >
                                </a>
                                <div class="detProdList">
                                    <i class=" <%= product.iconoTipoAct %>"></i>
                                    <%= product.tipoActividad %> <br>
                                        <div class="nameProdList"><%= product.nombreActividad %> </div><br>
                                            <%= product.fechaActividad %> <br>
                                                <%= product.horaActividad %> <br>
                                                    $<%= product.costoActividad %>
                                </div>
                        </article>
                        <%} }) %>
                </div>
            </section>


        </body>
        <%- include ('../partials/footer.ejs')%>

</html>