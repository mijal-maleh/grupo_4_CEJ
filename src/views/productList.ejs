<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('./partials/head.ejs')%>

        <link rel="stylesheet" href="../css/estilos-productList.css">

        <title>Pagina principal de Actividades</title>

</head>

<%- include ('./partials/header.ejs')%>
    <%- include ('./partials/main-header.ejs')%>

        <body>

            <div class="title">
                <h1>Pagina principal de Actividades</h1>
            </div>
            <section class="prodListMain">
                    <div class="">
                        <h2>Cursos</h2>
                    </div>
                    <%products.forEach (product=> {
                        if(product.tipoActividad == "Curso") { %>
                        <article class="article">
                            <div class="">
                                <% let rutaProd="/productDetail/:" + product.id%>
                                    <a href=<%=rutaProd %>>
                                        <img width="150" height="150" src=<%=product.imagenActividad %> alt=<%=
                                            product.photo_name %> >
                                    </a>
                                    <div class="">
                                        <i class=" <%= product.iconoTipoAct %>"></i>
                                        <%= product.tipoActividad %>
                                            <%= product.nombreActividad %>
                                                <%= product.fechaActividad %>
                                                    <%= product.horaActividad %>
                                                        $<%= product.costoActividad %>
                                    </div>
                            </div>
                        </article>
                    <%} }) %>

                    <div class="">
                        <h2>Actividades y Eventos</h2>
                    </div>
                    <%products.forEach (product=> {
                        if(product.tipoActividad !== "Curso") { %>
                        <article class="article">
                            <div class="">
                                <% let rutaProd="/productDetail/:" + product.id%>
                                    <a href=<%=rutaProd %>>
                                        <img width="150" height="150" src=<%=product.imagenActividad %> alt=<%=
                                            product.photo_name %> >
                                    </a>
                                    <div class="">
                                        <i class=" <%= product.iconoTipoAct %>"></i>
                                        <%= product.tipoActividad %>
                                            <%= product.nombreActividad %>
                                                <%= product.fechaActividad %>
                                                    <%= product.horaActividad %>
                                                        $<%= product.costoActividad %>
                                    </div>
                            </div>
                        </article>
                    <%} }) %>
            </section>


        </body>
        <%- include ('./partials/footer.ejs')%>

</html>