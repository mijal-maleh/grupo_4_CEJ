<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/head.ejs')%>

        <link rel="stylesheet" href="../css/estilos-productDetail.css">

        <title>Editar Actividades</title>

        <style>
            main {
                margin: 20px;
            }
        </style>
</head>

<body>


    <body>
        <%- include ('../partials/header.ejs')%>
            <%- include ('../partials/main-header.ejs')%>

                <main>


                    <form action="/productEdit" method="POST" class="withResponsive" enctype="multipart/form-data">

                        <input type="number" name="id" class="noShow" value="<%=productToEdit.id%>">


                        <H1>Pagina de Modificacion de Actividades</H1>
                        <br><br><br>

                        <br>
                        <label for="typeProd">Tipo de Actividad</label>
                        <select class="inputEditProdType" name="type">
                            <% let prodTypes=['Encuentros','Cursos','Clases','Festividades','Viajes' ] %>
                                <% for (let valueProd of prodTypes) {%>
                                    <option value=<%=valueProd %>
                                        <%=productToEdit.tipoActividad==valueProd ? "selected" : "" %>>
                                            <%= valueProd %>
                                    </option>
                                    <% } %>
                        </select>
                        <br>


                        <label for="nameProd">Nombre de la Actividad</label>
                        <input type="text" name="nameProd" id="nameProd" value="<%=productToEdit.nombreActividad%>">
                        <br>


                        <label for="nameProd">Destacado</label>
                        <select name="destacado" id="destacado">
                            <option value="si" <%=productToEdit.destacado=="si" ? "selected" : "" %>> si
                            </option>
                            <option value="no" <%=productToEdit.destacado=="no" ? "selected" : "" %>> no
                            </option>
                        </select>
                        <br>

                        <% let fechaArray=productToEdit.fechaActividad.split("-") %>
                            <% let fechaForm=fechaArray[0] + "-" + fechaArray[1] + "-" + fechaArray[2] %>
                                <label for="dateProd">Fecha de la Actividad</label>
                                <input type="date" id="dateProd" name="dateProd" value=<%=fechaForm %> >
                                <br>


                                <label for="timeProd">Hora de la Actividad</label>
                                <input type="time" name="timeProd" value=<%=productToEdit.horaActividad %>>
                                <br>


                                <label for="costProd">Costo de la Actividad</label>
                                <input type="number" name="costProd" value=<%=productToEdit.costoActividad %>>
                                <br>

                                <label for="descProd">Descripcion de la Actividad</label>
                                <input type="textarea" name="descProd" id="descProd"
                                    value="<%=productToEdit.descripcionActividad %>">
                                <br>

                                <label for="photo">Imagen o Flyer de la Actividad</label>
                                <img width="100%" src=<%=productToEdit.imagenActividad %>
                                alt=<%=productToEdit.photo_name %>>
                                    <input type="file" name="imagenActividad" accept=".jpg,.png,.gif">
                                    <br>


                                    <section class="actionsArt">
                                        <div class="botonesArt">
                                            <button class="buttonArt"><a>Confirmar cambios</a></button>
                                        </div>
                                    </section>
                    </form>

                    <section class="actionsArt withResponsive">
                        <div class="botonesArt">

                            <form action="/productDelete/<%=productToEdit.id %>" method="POST"
                                enctype="multipart/form-data" >
                                <button class="buttonArt"><a> Eliminar la
                                        actividad </a></button>
                            </form>

                        </div>
                    </section>
                </main>



                <footer>
                    <%- include ('../partials/footer.ejs')%>
                </footer>
    </body>


</body>

</html>